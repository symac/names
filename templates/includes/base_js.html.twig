<script type="text/javascript">
    let ready = (callback) => {
        if (document.readyState != "loading") callback();
        else document.addEventListener("DOMContentLoaded", callback);
    }

    ready(() => {
        document.addEventListener('click', function (event) {
            if (event.target.id == "show_answer") {
                document.querySelector("#answer").style.visibility = "visible";
            }
        }, false);

        document.addEventListener('click', function (event) {
            if (event.target.id == "quizzShowAnswer") {
                let imageHidden = document.querySelector("#quizzImageHidden");
                if (imageHidden) {
                    imageHidden.style.display = "block";
                    document.querySelector("#quizzImage").style.display = "none";
                } else {
                    document.querySelector("#quizzImage").textContent = "â†’";
                }

                document.querySelector("#quizzShowAnswer").style.display="none";
                document.querySelector("#quizzAnswer").style.visibility="visible";

                return false;
            }
        }, false);
    });
</script>
